{
  "name": "ange-repond",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
import { useState, useEffect } from "react";

export default function HomePage() {
  const [question, setQuestion] = useState("");
  const [response, setResponse] = useState("");
  const [loading, setLoading] = useState(false);
  const [questionsLeft, setQuestionsLeft] = useState(5); // 1 gratuite + 5 restantes aprÃ¨s paiement

  const askAngel = async () => {
    if (!question) return;
    setLoading(true);
    setResponse("");

    try {
      const res = await fetch("/api/ask", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ question }),
      });

      const data = await res.json();
      setResponse(data.reply);
      speakResponse(data.reply);
      setQuestionsLeft((prev) => prev - 1);
    } catch (e) {
      setResponse("L'ange est silencieux pour lâ€™instant...");
    }

    setLoading(false);
  };

  const speakResponse = (text) => {
    const synth = window.speechSynthesis;
    const utter = new SpeechSynthesisUtterance(text);
    utter.lang = "fr-FR";
    utter.pitch = 1.5;
    utter.rate = 1;
    synth.speak(utter);
  };

  return (
    <main style={{ padding: "2rem", fontFamily: "sans-serif" }}>
      <h1>ðŸ‘¼ Ange Spirituel</h1>
      <p>Pose ta question Ã  lâ€™ange. La premiÃ¨re est gratuite, puis 1â€¯â‚¬ pour 6.</p>

      <textarea
        value={question}
        onChange={(e) => setQuestion(e.target.value)}
        placeholder="Ã‰cris ta question ici..."
        rows={5}
        style={{ width: "100%", maxWidth: "600px", marginTop: "1rem" }}
      />

      <button
        onClick={askAngel}
        disabled={loading || questionsLeft <= 0}
        style={{
          marginTop: "1rem",
          padding: "0.5rem 1rem",
          backgroundColor: "#4f46e5",
          color: "white",
          borderRadius: "5px",
          cursor: "pointer",
        }}
      >
        {loading ? "Lâ€™ange rÃ©pond..." : "Demander Ã  lâ€™ange"}
      </button>

      {response && (
        <div style={{ marginTop: "1.5rem", background: "#f9f9f9", padding: "1rem", borderRadius: "8px" }}>
          <h2>RÃ©ponse divine :</h2>
          <p>{response}</p>
        </div>
      )}

      {questionsLeft <= 0 && (
        <div style={{ marginTop: "1rem", color: "red" }}>
          <p>Tu as utilisÃ© toutes tes questions gratuites.</p>
          <a href="/paiement" style={{ color: "#ff9800", fontWeight: "bold" }}>
            Payer 1â€¯â‚¬ pour 6 nouvelles questions
          </a>
        </div>
      )}
    </main>
  );
}
